@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>MATERIAS:</h2>
            <p>MATERIAS EXISTENTES PUEDE VER, EDITAR O AGREGAR ALGUNA MATERIA</p>
            <hr />
        </div>
    </div>
</div>

<br />

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript" src="~/js/Usuario/MateriaCRUD.js"></script>
<script type="text/javascript" src="~/js/Validaciones.js"></script>

<div class="container">


    <div class="row">
        <div class="col-md-10">
        </div>
        <div class="col-md-1" style="padding-left:100px">
            <button type="button" class=" btn btn-success" id="btnGuardar" onclick="Modal()">Agregar</button>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <table id="tblMateria" class="table table-hover" border="1">
                <thead>
                    <tr>
                        <th class="text-center" scope="col" >Editar</th>

                        <th class="text-center" scope="col" style="display:none;">IdMateria</th>
                        <th class="text-center" scope="col">Nombre</th>
                        <th class="text-center" scope="col">Costo</th>

                        <th class="text-center" scope="col">Eliminar</th>
                    </tr>

                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>


<div class="modal fade" id="ModalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="lblTitulo">Materia:</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Id Materia:</label>
                        <input type="text" class="form-control" id="txtIdMateria" placeholder="IdMateria" disabled="disabled" />
                        @*<input type="text" class="hidden" id="txtIdEmpleado" />*@
                    </div>

                    <div class="form-group">
                        <label>Nombre:</label>
                        <div class="input-group ">
                            <span class="input-group-text" id="basic-addonNombre"><i class="bi bi-journal"></i></span>
                            <input type="text" class="form-control" id="txtNombre" placeholder="Nombre" onkeypress="SoloLetras(event, 'txtNombre', 'lblNombre', 'basic-addonNombre')" />
                        </div>
                        <label id="lblNombre"></label>
                    </div>

                    <div class="form-group">
                        <label>Costo:</label>
                        <div class="input-group ">
                            <span class="input-group-text" id="basic-addonCosto"><i class="bi bi-currency-dollar"></i></span>
                            <input type="text" class="form-control" id="txtCosto" placeholder="Costo" onkeypress="SoloNumeros(event, 'txtCosto', 'lblCosto', 'basic-addonCosto')" />
                        </div>
                        <label id="lblCosto"></label>
                    </div>

                   @* <div class="form-group">
                        <label>Nombre:</label>
                        <input type="text" class="form-control" id="txtNombre" placeholder="Nombre" />
                    </div>
                    <div class="form-group">
                        <label>Costo:</label>
                        <input type="text" class="form-control" id="txtCosto" placeholder="Costo" />
                    </div>
*@

                  @*  <div class="form-group">
                        <label>Estado:</label>
                        <select class="form-control" name="ddlEstados" id="ddlEstados"></select>
                    </div>*@
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success  glyphicon-edit" id="btnGuardar" onclick="Guardar()">Guardar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="hideModal()">Cancelar</button>
            </div>
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-md-5">

            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Detalle</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <h5>
                                Acción completada con éxito
                            </h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" value="Regresar" data-dismiss="modal">Regresar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


